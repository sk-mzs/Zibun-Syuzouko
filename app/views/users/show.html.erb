<div class="min-h-screen bg-gradient-to-b from-blue-50 to-white">
  <div class="container mx-auto px-4 py-16">
    <div class="max-w-2xl mx-auto">
      <!-- ユーザープロフィールカード -->
      <div class="bg-white rounded-lg shadow-lg p-8">
        <!-- ユーザーアイコン（後々実装） -->
        <div class="mb-8">
          <div class="w-32 h-32 mx-auto bg-gray-200 rounded-full shadow-md"></div>
        </div>

        <!-- ユーザー名 -->
        <h1 class="text-3xl font-bold text-gray-800 text-center mb-6">
          <%= @user.name %>
        </h1>

        <!-- 自己紹介文（後々実装） -->
        <% if false %>
        <div class="mb-8">
          <h2 class="text-lg font-semibold text-gray-700 mb-2">自己紹介</h2>
          <div class="bg-gray-50 rounded-lg p-4 min-h-[100px]">
            <p class="text-gray-500 text-center">自己紹介文はまだ設定されていません</p>
          </div>
        </div>
        <% end %>    

        <!-- 投稿数などの統計情報 -->
        <div class="grid grid-cols-2 gap-4 mb-8">
          <div class="bg-gray-50 rounded-lg p-4 text-center">
            <p class="text-sm text-gray-600">投稿</p>
            <p class="text-2xl font-bold text-gray-800"><%= @user.posts.count %></p>
          </div>
          <div class="bg-gray-50 rounded-lg p-4 text-center">
            <p class="text-sm text-gray-600">いいね</p>
            <p class="text-2xl font-bold text-gray-800"><%= @user.likes.count %></p>
          </div>
        </div>

        <!-- ナビゲーションボタン -->
        <div class="space-y-4">
          <%= link_to "投稿一覧へ", posts_path, 
              class: "block w-full py-3 px-6 bg-primary text-white font-semibold rounded-lg shadow-md hover:bg-opacity-90 transition duration-300 text-center" %>
          
          <%= link_to "トップページに戻る", root_path, 
              class: "block w-full py-3 px-6 bg-gray-100 text-gray-700 font-semibold rounded-lg shadow-md hover:bg-gray-200 transition duration-300 text-center" %>
        </div>
      </div>
    </div>
  </div>
</div>