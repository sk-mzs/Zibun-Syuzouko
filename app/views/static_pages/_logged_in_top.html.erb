<div class="min-h-screen bg-gradient-to-b from-blue-50 to-white">
  <div class="container mx-auto px-4 py-16">
    <!-- ランダムな投稿の表示 -->
    <% if @random_post.present? %>
      <div class="max-w-2xl mx-auto mb-12">
        <h2 class="text-2xl font-bold text-gray-800 text-center mb-6">おすすめの投稿</h2>
        <%= render 'posts/post', post: @random_post %>
      </div>
    <% end %>

    <!-- ナビゲーションボタン -->
    <div class="max-w-md mx-auto">
      <div class="space-y-4">
        <%= link_to "みんなの投稿", posts_path,
            class: "block w-full py-3 px-6 bg-primary text-white font-semibold rounded-lg shadow-md hover:bg-opacity-90 transition duration-300 text-center" %>
        
        <%= link_to "新規投稿", new_post_path,
            class: "block w-full py-3 px-6 bg-white text-primary font-semibold rounded-lg shadow-md border border-primary hover:bg-gray-50 transition duration-300 text-center" %>
        
        <%= link_to "いいね一覧", likes_posts_path,
            class: "block w-full py-3 px-6 bg-gray-100 text-gray-700 font-semibold rounded-lg shadow-md hover:bg-gray-200 transition duration-300 text-center" %>
      </div>
    </div>
  </div>
</div>