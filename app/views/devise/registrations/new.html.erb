<div class="min-h-screen bg-gradient-to-b from-blue-50 to-white py-12">
  <div class="container mx-auto px-4 max-w-md">
    <h2 class="text-3xl font-bold text-gray-800 text-center mb-8">アカウント登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "bg-white shadow-lg rounded-lg p-8" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-6">
        <%= f.label :name, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", 
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" %>
      </div>

      <div class="mb-6">
        <%= f.label :email, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.email_field :email, autocomplete: "email", 
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" %>
      </div>

      <div class="mb-6">
        <%= f.label :password, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <% if @minimum_password_length %>
          <span class="text-sm text-gray-500">(<%= @minimum_password_length %>文字以上)</span>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password",
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" %>
      </div>

      <div class="mb-6">
        <%= f.label :password_confirmation, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password",
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" %>
      </div>

      <div class="mb-6">
        <%= f.submit "アカウント登録", class: "w-full py-3 px-6 bg-primary text-white font-semibold rounded-lg shadow-md hover:bg-opacity-90 transition duration-300" %>
      </div>
    <% end %>

    <div class="text-center mt-4">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
