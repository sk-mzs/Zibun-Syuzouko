<div class="min-h-screen bg-gradient-to-b from-blue-50 to-white py-12">
  <div class="container mx-auto px-4 max-w-md">
    <h2 class="text-3xl font-bold text-gray-800 text-center mb-8">ログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "bg-white shadow-lg rounded-lg p-8" }) do |f| %>
      <div class="mb-6">
        <%= f.label :email, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" %>
      </div>

      <div class="mb-6">
        <%= f.label :password, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.password_field :password, autocomplete: "current-password",
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-6 flex items-center">
          <%= f.check_box :remember_me, class: "mr-2" %>
          <%= f.label :remember_me, class: "text-gray-700 text-sm font-medium" %>
        </div>
      <% end %>

      <div class="mb-6">
        <%= f.submit "ログイン", class: "w-full py-3 px-6 bg-primary text-white font-semibold rounded-lg shadow-md hover:bg-opacity-90 transition duration-300" %>
      </div>
    <% end %>

    <div class="text-center mt-4 space-y-2">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
