<div id="<%= dom_id post %>">

  <p>
    <strong>Picture:</strong>
    <%= image_tag post.picture_url, class: "card-img-top", width: "300", height:"200" %>
  </p>

  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>

  <p>
    <strong>Area:</strong>
    <%= post.area %>
  </p>

  <%= render 'like_buttons', { post: post } %>

</div>
