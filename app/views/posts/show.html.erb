<div class="min-h-screen bg-gradient-to-b from-blue-50 to-white">
  <div class="container mx-auto px-4 py-16">
    <% if notice %>
      <div class="max-w-2xl mx-auto mb-8">
        <div class="bg-green-50 text-green-800 p-4 rounded-lg">
          <%= notice %>
        </div>
      </div>
    <% end %>

    <div class="max-w-2xl mx-auto">
      <%= render @post %>

      <div class="mt-8 space-y-4">
        <% if @post.user == current_user %>
          <%= link_to "編集する", edit_post_path(@post),
              class: "block w-64 mx-auto py-3 px-6 bg-primary text-white font-semibold rounded-lg shadow-md transition duration-300 text-center" %>
          
          <%= button_to "削除する", @post, method: :delete,
              class: "block w-64 mx-auto py-3 px-6 bg-white text-red-600 font-semibold rounded-lg shadow-md border border-red-600 transition duration-300",
              form: { data: { turbo_confirm: "本当に削除しますか？" } } %>
        <% end %>
        
        <%= link_to "投稿一覧に戻る", posts_path,
            class: "block w-64 mx-auto py-3 px-6 bg-gray-100 text-gray-700 font-semibold rounded-lg shadow-md transition duration-300 text-center" %>
      </div>
    </div>
  </div>
</div>
