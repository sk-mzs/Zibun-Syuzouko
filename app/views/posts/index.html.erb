<div class="min-h-screen bg-gradient-to-b from-blue-50 to-white">
  <div class="container mx-auto px-4 py-8">

    <h1 class="text-4xl font-bold text-gray-800 mb-8 text-center">投稿一覧</h1>

    <div class="mb-8 max-w-md mx-auto">
      <%= search_form_for @q, html: { class: "bg-white shadow-lg rounded-lg p-6" } do |f| %>
        <div class="flex items-center space-x-4">
          <%= f.label :title_cont, "タイトル検索", class: "text-gray-700 font-medium" %>
          <%= f.search_field :title_cont, 
              class: "flex-1 px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" %>
          <%= f.submit "検索", class: "py-2 px-6 bg-primary text-white font-semibold rounded-lg shadow-md hover:bg-opacity-90 transition duration-300" %>
        </div>
      <% end %>
    </div>

    <div id="posts" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @posts.each do |post| %>
        <%= render post %>
      <% end %>
    </div>

    <% if user_signed_in? %>
      <%= link_to "新規投稿", new_post_path, 
          class: "fixed bottom-8 right-8 py-3 px-6 bg-primary text-white font-semibold rounded-full shadow-lg hover:bg-opacity-90 transition duration-300" %>
    <% end %>
  </div>
</div>
