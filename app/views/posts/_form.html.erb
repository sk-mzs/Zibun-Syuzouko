<%= form_with(model: post, class: "bg-white shadow-lg rounded-lg p-8") do |form| %>
  <% if post.errors.any? %>
    <div class="mb-6 p-4 bg-red-50 rounded-lg">
      <h2 class="text-red-700 text-lg font-bold mb-2"><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul class="list-disc pl-5 text-red-600">
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-6">
    <%= form.label :title, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :title, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" %>
  </div>

  <div class="mb-6">
    <%= form.label :body, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_area :body, rows: 5, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent resize-none" %>
  </div>

  <div class="mb-6">
    <%= form.label :area, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :area, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" %>
  </div>

  <div class="mb-8">
    <%= form.label :picture, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <div class="mt-1 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-lg">
      <div class="space-y-3 text-center w-full">
        <div class="flex justify-center text-sm text-gray-600">
          <%= form.file_field :picture, class: "file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-semibold file:bg-primary file:text-white hover:file:bg-opacity-90 text-gray-600" %>
        </div>
        <p class="text-xs text-gray-500">
          PNG, JPG, JPEG
        </p>
      </div>
    </div>
  </div>

  <div>
    <%= form.submit class: "w-full py-3 px-6 bg-primary text-white font-semibold rounded-lg shadow-md hover:bg-opacity-90 transition duration-300" %>
  </div>
<% end %>
